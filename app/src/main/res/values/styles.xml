<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="AppTheme" parent="@style/Theme.AppCompat">
		<item name="android:actionBarStyle">@style/AbStyle</item>
		<item name="android:windowActionBarOverlay">true</item>
		<item name="android:popupMenuStyle">@style/PopupMenuStyle</item>
		<!-- Support library compatibility -->
		<item name="actionBarStyle">@style/AbStyle</item>
		<item name="windowActionBarOverlay">true</item>
		<item name="popupMenuStyle">@style/PopupMenuStyle</item>
	</style>

	<style name="AppThemeNoOverlay" parent="AppTheme">
		<item name="android:windowActionBarOverlay">false</item>
		<!-- Support library compatibility -->
		<item name="windowActionBarOverlay">false</item>
	</style>

	<!--SettingsActivity, a PreferenceActivity.-->
	<style name="PrefsTheme" parent="AppThemeNoOverlay">
		<item name="android:windowBackground">@color/bg_drawer</item>
		<item name="android:textColor">@color/text_general</item>
		<item name="android:listViewStyle">@style/PrefsListStyle</item>
		<item name="android:listSeparatorTextViewStyle">@style/PreferenceListHeader</item>
		<item name="android:logo">@drawable/ic_action_settings</item>
		<!-- Support library compatibility -->
		<item name="logo">@drawable/ic_action_settings</item>
	</style>

	<style name="PrefsListStyle" parent="@android:style/Widget.ListView">
		<item name="android:background">@color/bg_drawer</item>
		<item name="android:cacheColorHint">@android:color/transparent</item>
		<item name="android:divider">@drawable/divide_1</item>
		<item name="android:dividerHeight">1dp</item>
	</style>

	<style name="PreferenceListHeader" parent="@android:style/Widget.TextView">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">@dimen/menu_text_on_drawer</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:textColor">@color/text_general</item>
		<item name="android:background">@drawable/bg_with_underline</item>
		<item name="android:divider">@drawable/divide_1</item>
		<item name="android:dividerHeight">1dp</item>
		<item name="android:paddingTop">@dimen/genernal_padding_margin</item>
		<item name="android:paddingBottom">@dimen/genernal_padding_margin</item>
	</style>



	<!--Support ActionBar-->
	<style name="AbStyle" parent="@style/Widget.AppCompat.Base.ActionBar">
		<item name="android:background">@color/bg_actionbar</item>
		<item name="android:icon">@drawable/ic_action_hybrid</item>
		<!-- Support library compatibility -->
		<item name="icon">@drawable/ic_action_hybrid</item>
		<item name="background">@color/bg_actionbar</item>
	</style>

	<!--Background of popover-->
	<style name="PopupMenuStyle" parent="@style/Widget.AppCompat.PopupMenu">
		<item name="android:popupBackground">@color/bg_actionbar</item>
		<item name="android:dropDownSelector">@color/bg_actionbar</item>
	</style>

	<!--External app-list-view.-->
	<style name="ExApps"/>

	<style name="ExApps.Text">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/text_general</item>
		<item name="android:textSize">12sp</item>
		<item name="android:selectable">true</item>
		<item name="android:clickable">true</item>
	</style>

	<style name="ExApps.Button">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">30dp</item>
		<item name="android:textSize">12sp</item>
		<item name="android:padding">0dp</item>
		<item name="android:selectable">true</item>
		<item name="android:clickable">true</item>
	</style>

	<!--Settings-->
	<style name="Settings"/>

	<style name="Settings.Open">
		<item name="android:textColor">@color/text_general</item>
		<item name="android:textSize">@dimen/menu_text_on_drawer</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="Settings.Category">
		<item name="android:textColor">@color/text_general</item>
		<item name="android:textSize">@dimen/menu_text_on_drawer</item>
		<item name="android:gravity">left|center_vertical</item>
		<item name="android:paddingLeft">@dimen/genernal_padding_margin</item>
		<item name="android:paddingRight">@dimen/genernal_padding_margin</item>
	</style>

	<style name="Settings.Category.Title">
		<item name="android:textColor">@color/text_general</item>
		<item name="android:gravity">left|center_vertical</item>
	</style>



</resources>
